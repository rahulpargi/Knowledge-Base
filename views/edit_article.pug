extends layout

block content
    h1 #{title}
    form(action='/articles/edit/'+article._id method='POST')
        .row
            form.col.s12
                .row
                    .input-field.col.s12
                        input#first_name.validate( type='text',name='title',value=article.title)
                        label(for='title') Title
                .row
                    .input-field.col.s12
                        input#first_name.validate( type='text',name='author', value=article.author)
                        label(for='author') Author
                .row
                    form.col.s12
                        .row
                        .input-field.col.s12
                            input#first_name.validate( type='text',name='body' value=article.body)
                            label(for='body') Body
                button.btn.waves-effect.waves-light(type='submit', name='action')
                        | Submit
                        
