extends layout

block content
    h1 #{title}
    form(action='/articles/add' method='POST')
        .row
            form.col.s12
                .row
                    .input-field.col.s12
                        input#first_name.validate( type='text',name='title')
                        label(for='title') Title
                .row
                    .input-field.col.s12
                        input#first_name.validate( type='text',name='author')
                        label(for='author') Author
                .row
                    form.col.s12
                        .row
                        .input-field.col.s12
                            input#first_name.validate( type='text',name='body')
                            label(for='body') Body
                button.btn.waves-effect.waves-light(type='submit', name='action')
                        | Submit
                        
